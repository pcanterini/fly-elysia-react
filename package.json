{
  "name": "my-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -p name -c \"bgBlue.bold,bgMagenta.bold\" \"bun:dev:client\" \"bun:dev:server\"",
    "dev:client": "cd apps/client && bun run dev",
    "dev:server": "cd apps/server && bun run dev",
    "build": "bun run build:client && bun run build:server",
    "build:client": "cd apps/client && bun run build",
    "build:server": "cd apps/server && bun run build",
    "lint": "bun run lint:client && bun run lint:server",
    "lint:client": "cd apps/client && bun run lint",
    "lint:server": "cd apps/server && bun run lint",
    "typecheck": "bun run typecheck:server",
    "typecheck:server": "cd apps/server && bun run typecheck",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "deploy": "./deploy.sh",
    "deploy:server": "./deploy-server.sh",
    "deploy:client": "./deploy-client.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "terminal.css": "^0.7.5"
  }
}
