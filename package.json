{
  "name": "my-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run db:start && concurrently -p name -c \"bgBlue.bold,bgMagenta.bold\" \"bun:dev:client\" \"bun:dev:server\"",
    "db:start": "docker-compose up postgres -d",
    "dev:client": "cd apps/client && bun run dev",
    "dev:server": "cd apps/server && bun run dev",
    "build": "bun run build:client && bun run build:server",
    "build:client": "cd apps/client && bun run build",
    "build:server": "cd apps/server && bun run build",
    "lint": "bun run lint:client && bun run lint:server",
    "lint:client": "cd apps/client && bun run lint",
    "lint:server": "cd apps/server && bun run lint",
    "typecheck": "bun run typecheck:server",
    "typecheck:server": "cd apps/server && bun run typecheck",
    "test": "cd apps/client && bun run test",
    "test:ui": "cd apps/client && bun run test:ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "db:studio": "cd apps/server && bun run db:studio",
    "deploy": "./deploy.sh",
    "deploy:server": "./deploy-server.sh",
    "deploy:client": "./deploy-client.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "concurrently": "^8.2.2"
  }
}
