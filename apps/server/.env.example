# Database
DATABASE_URL=

# Auth
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=

# Redis (for BullMQ job queues)
# For local development with docker-compose:
REDIS_URL=redis://:dev-redis-password-change-in-production@localhost:6379
# For production, use Upstash or another Redis provider:
# REDIS_URL=redis://default:password@host:port

# Legacy Redis config (optional if REDIS_URL is set)
REDIS_HOST=localhost
REDIS_PORT=6379

# Worker configuration
RUN_WORKERS=false # Set to true if running workers in same process