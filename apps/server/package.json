{
  "name": "@my-app/server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:worker": "bun --watch src/worker.ts",
    "build": "rm -rf ./dist && bun build src/index.ts src/worker.ts --outdir ./dist --target bun",
    "start": "bun dist/index.js",
    "start:no-workers": "RUN_WORKERS=false bun dist/index.js",
    "worker": "bun dist/worker.js",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.1.1",
    "@my-app/shared": "workspace:*",
    "@upstash/redis": "^1.35.3",
    "better-auth": "^1.3.7",
    "bullmq": "^5.58.2",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "elysia": "latest",
    "ioredis": "^5.7.0",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.7",
    "@types/ioredis": "^5.0.0",
    "bun-types": "latest"
  }
}
